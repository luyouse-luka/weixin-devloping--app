/**app.wxss**/

/* ========================================
   自定义字体声明 - 阿里云 OSS
   ======================================== */

/* 飞花宋体 - 用于正文 */
@font-face {
  font-family: 'FeiHuaSong';
  src: url('https://family-app-fonts.oss-cn-shanghai.aliyuncs.com/subset/feihuasong-subset.woff2') format('woff2');
  font-weight: normal;
  font-style: normal;
  font-display: swap; /* 优化字体加载体验 */
}

/* 顶列逐海字体 - 用于标题 */
@font-face {
  font-family: 'dlzh';
  src: url('https://family-app-fonts.oss-cn-shanghai.aliyuncs.com/subset/dlzh-subset.woff2') format('woff2');
  font-weight: normal;
  font-style: normal;
  font-display: swap; /* 优化字体加载体验 */
}

page {
  background-color: #f5f7fa;
  /* 优先使用自定义字体，然后回退到系统字体 */
  font-family: 
    'FeiHuaSong',            /* 飞花宋体 - 正文主字体 */
    'PingFang SC',           /* 苹方 - 柔和圆润（iOS） */
    'Hiragino Sans GB',      /* 冬青黑体 - 优雅（macOS） */
    'Microsoft YaHei',       /* 微软雅黑 - 清晰柔和（Windows） */
    'STHeiti',               /* 华文黑体 - 艺术感 */
    'WenQuanYi Micro Hei',   /* 文泉驿微米黑 - 柔和 */
    'Helvetica Neue',        /* 优雅现代 */
    'Arial',                 /* 通用字体 */
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-weight: 400;
  letter-spacing: 0.5rpx;
  line-height: 1.6;
}

.container {
  height: 100vh;
  box-sizing: border-box;
} 

button {
  background-color: transparent;
  border: none;
  box-shadow: none;
  padding: 0;
  margin: 0;
  outline: none;
  border-radius: 0;
  width: auto;
  height: auto;
  min-width: none;
  min-height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

button::after {
  border: none;
}

/* 统一文本样式 */
text {
  word-break: break-all;
  font-family: inherit;
}

/* 标题字体 - 更艺术可爱 */
.title,
.order-title,
.page-title,
.section-title,
.product-name,
.item-name,
.chef-name,
.couplet-line,
.couplet-subtitle,
.category-item,
.top-bar,
.empty-cart,
.page-subtitle {
  font-family: 
    'dlzh',
    'PingFang SC',
    'Hiragino Sans GB',
    'Microsoft YaHei',
    'STHeiti',
    sans-serif;
  font-weight: 600;
  letter-spacing: 1rpx;
  -webkit-font-smoothing: antialiased;
}

/* 正文字体 - 更柔和 */
.body-text,
.description,
.intro,
.product-intro,
.chef-description,
.order-subtitle,
.page-subtitle {
  font-family: 
    'PingFang SC',
    'Hiragino Sans GB',
    'Microsoft YaHei',
    'WenQuanYi Micro Hei',
    sans-serif;
  font-weight: 400;
  letter-spacing: 0.5rpx;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
}

/* 按钮文字 - 更柔和 */
button,
.order-btn,
.place-order-btn,
.confirm-btn,
.add-to-cart {
  font-family: 
    'PingFang SC',
    'Hiragino Sans GB',
    'Microsoft YaHei',
    sans-serif;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  -webkit-font-smoothing: antialiased;
}

/* 统一图片样式 */
image {
  display: block;
}