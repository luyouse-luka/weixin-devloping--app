/**app.wxss**/
/* 自定义字体声明 - 站酷快乐体（可爱风格） */
/* 
 * 使用说明：
 * 1. 下载站酷快乐体字体文件（.ttf格式）
 * 2. 将文件放入 fonts 文件夹，命名为 cute-font.ttf
 * 3. 取消下面 @font-face 的注释
 * 4. 字体文件下载地址：https://www.zcool.com.cn/special/zcoolfonts/
 */
/*
@font-face {
  font-family: 'CuteFont';
  src: url('/fonts/cute-font.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
  font-display: swap;
}
*/

page {
  background-color: #f5f7fa;
  /* 柔和艺术可爱风格字体组合 */
  /* 如果已配置自定义字体，将 'CuteFont' 添加到最前面 */
  font-family: 
    /* 'CuteFont', */        /* 自定义字体（取消注释后启用） */
    'PingFang SC',           /* 苹方 - 柔和圆润（iOS） */
    'Hiragino Sans GB',      /* 冬青黑体 - 优雅（macOS） */
    'Microsoft YaHei',       /* 微软雅黑 - 清晰柔和（Windows） */
    'STHeiti',               /* 华文黑体 - 艺术感 */
    'WenQuanYi Micro Hei',   /* 文泉驿微米黑 - 柔和 */
    'Helvetica Neue',        /* 优雅现代 */
    'Arial',                 /* 通用字体 */
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-weight: 400;
  letter-spacing: 0.5rpx;
  line-height: 1.6;
}

.container {
  height: 100vh;
  box-sizing: border-box;
} 

button {
  background-color: transparent;
  border: none;
  box-shadow: none;
  padding: 0;
  margin: 0;
  outline: none;
  border-radius: 0;
  width: auto;
  height: auto;
  min-width: none;
  min-height: auto;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

button::after {
  border: none;
}

/* 统一文本样式 */
text {
  word-break: break-all;
  font-family: inherit;
}

/* 标题字体 - 更艺术可爱 */
.title,
.order-title,
.page-title,
.section-title,
.product-name,
.item-name,
.chef-name {
  font-family: 
    'PingFang SC',
    'Hiragino Sans GB',
    'Microsoft YaHei',
    'STHeiti',
    sans-serif;
  font-weight: 600;
  letter-spacing: 1rpx;
  -webkit-font-smoothing: antialiased;
}

/* 正文字体 - 更柔和 */
.body-text,
.description,
.intro,
.product-intro,
.chef-description,
.order-subtitle,
.page-subtitle {
  font-family: 
    'PingFang SC',
    'Hiragino Sans GB',
    'Microsoft YaHei',
    'WenQuanYi Micro Hei',
    sans-serif;
  font-weight: 400;
  letter-spacing: 0.5rpx;
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
}

/* 按钮文字 - 更柔和 */
button,
.order-btn,
.place-order-btn,
.confirm-btn,
.add-to-cart {
  font-family: 
    'PingFang SC',
    'Hiragino Sans GB',
    'Microsoft YaHei',
    sans-serif;
  font-weight: 500;
  letter-spacing: 0.5rpx;
  -webkit-font-smoothing: antialiased;
}

/* 统一图片样式 */
image {
  display: block;
}