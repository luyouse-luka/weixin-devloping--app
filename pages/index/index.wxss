.container {
    height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 40rpx;
    box-sizing: border-box;
}

.top-bar {
    text-align: center;
    font-size: 48rpx;
    padding: 30rpx 20rpx;
    font-weight: bold;
    color: #fff;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
    margin-bottom: 40rpx;
}

swiper {
    width: 100%;
    height: 500rpx;
    border-radius: 24rpx;
    overflow: hidden;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
    margin-bottom: 60rpx;
}

.swiper-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.btn-container {
    display: flex;
    justify-content: center;
    margin-top: 40rpx;
    width: 100%;
}

.enter-btn {
    background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
    color: white;
    width: 70%;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 50rpx;
    font-size: 36rpx;
    font-weight: 600;
    letter-spacing: 2rpx;
    box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.4),
                0 2rpx 8rpx rgba(7, 193, 96, 0.25);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.enter-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.enter-btn:active::before {
    left: 100%;
}

.enter-btn::after {
    border: none;
}

.enter-btn:active {
    transform: translateY(2rpx) scale(0.98);
    box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.35),
                0 1rpx 4rpx rgba(7, 193, 96, 0.2);
}