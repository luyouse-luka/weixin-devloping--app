.product-page {
    display: flex;
    flex-direction: column;
    background-color: #f8f8f8; /* 更换背景色 */
    height: 100vh;
}

.header {
    height: 300rpx;
    position: relative;
    display: flex;
    flex-direction: column;
}

.banner {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: relative;
}

.header::after {
    content: "";
    position: absolute;
    left: 0;
    height: 100%;
    width: 100%;
    background: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.5)); /* 优化遮罩渐变 */
    opacity: 1;
    z-index: 2;
}

.title-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 23;
    width: 100%;
    padding: 0 20rpx;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 12rpx;
}

.couplet-line {
    color: #fff;
    font-size: 64rpx;
    font-weight: 500; 
    text-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.6),
                 0 3rpx 8rpx rgba(0, 0, 0, 0.5),
                 0 1rpx 3rpx rgba(0, 0, 0, 0.4);
    letter-spacing: 6rpx;
    line-height: 1.3;
    display: block;
    font-family: "dlzh";
}

.couplet-up {
    font-size: 55rpx;
    margin-bottom: 0rpx;
}

.couplet-down {
    font-size: 55rpx;
}

.couplet-subtitle {
    color: rgba(255, 255, 255, 0.98);
    font-size: 24rpx;
    font-weight: 600;
    text-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.5);
    letter-spacing: 5rpx;
    margin-top: 20rpx;
    padding: 12rpx 24rpx;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.15) 100%);
    border-radius: 40rpx;
    backdrop-filter: blur(5rpx);
    border: 2rpx solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
   font-family: 'FeiHuaSong';
}

.body {
    flex: 1;
    min-height: 0;
    height: auto;
    display: flex;
    position: relative;
}

.category-list {
    width: 220rpx;
    background-color: #f9f9f9;
    overflow-y: auto;
    border-right: 1rpx solid #eee;
}

.category-item {
    padding: 32rpx 16rpx;
    text-align: center;
    border-bottom: 1rpx solid #eee;
    font-size: 32rpx;
    font-weight: 500;
    transition: all 0.2s;
    line-height: 1.5;
    word-break: break-all;
    box-sizing: border-box;
    min-height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;  font-family: "dlzh";
    gap: 0;
    letter-spacing: 0;
}

.category-item.active {
    background-color: lightgreen;
    color: black;
}

.category-item:hover {
    background-color: #e8f5e9;
}

.product-all {
    display: none; /* 移除无效样式 */
}

.product-list {
    flex: 1;
    padding: 30rpx;
    padding-bottom: 140rpx;
    overflow-y: auto;
    box-sizing: border-box;
    background-color: #fff;
    overflow-x: hidden;
}

.product-item {
    display: flex;
    padding: 28rpx;
    padding-right: 20rpx;
    border-bottom: none;
    flex: 1;
    border-radius: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06),
                0 1rpx 4rpx rgba(0, 0, 0, 0.04);
    background: linear-gradient(180deg, #ffffff 0%, #fafafa 100%);
    align-items: flex-start;
    gap: 24rpx;
    margin-bottom: 28rpx;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    min-height: 200rpx;
    border: 1rpx solid rgba(0, 0, 0, 0.04);
    overflow: visible;
    box-sizing: border-box;
    position: relative;
}

.product-item:active {
    transform: translateY(-2rpx) scale(0.99);
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1),
                0 2rpx 8rpx rgba(0, 0, 0, 0.06);
    border-color: rgba(7, 193, 96, 0.2);
}

.image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 20rpx;
    overflow: hidden;
    display: flex;
    flex-shrink: 0;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s;
}

.product-item:active .image {
    transform: scale(1.02);
    box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
}

.image .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background: #f5f5f5;
    transition: transform 0.3s;
}

.product-item:active .product-image {
    transform: scale(1.05);
}

.product-item .text {
    display: flex;
    position: relative;
    flex: 1;
    flex-direction: column;
    padding-right: 0;
    min-height: 200rpx;
    justify-content: space-between;
    overflow: visible;
}

.product-name {
    font-size: 32rpx;
    font-weight: 500;
    color: #000;
    margin-bottom: 10rpx;
    line-height: 1.4;
    letter-spacing: 0;
    font-family: 'FeiHuaSong';
}

.product-intro {
    font-size: 18rpx;
    color: #333;
    margin-bottom: 8rpx;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.price-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: auto;
    gap: 16rpx;
    padding-right: 0;
    min-height: 64rpx;
}

.product-price {
    font-size: 32rpx;
    color: #ff4d4f;
    font-weight: 700;
    letter-spacing: 1rpx;
    text-shadow: 0 1rpx 2rpx rgba(255, 77, 79, 0.1);
    flex: 1;
    white-space: nowrap;
    overflow: visible;
}

.product-sold {
    display: block;
    font-size: 20rpx;
    color: #999;
    margin-bottom: 4rpx;
}

.product-spec {
    display: none;
}

/* 移除重复样式 */
.category-title {
    display: block;
    font-size: 38rpx;
    font-weight: 700;
    margin-top: 48rpx;
    margin-bottom: 28rpx;
    padding: 20rpx 28rpx;
    color: #333;
    background: linear-gradient(90deg, rgba(7, 193, 96, 0.12) 0%, rgba(7, 193, 96, 0.04) 50%, transparent 100%);
    border-left: 8rpx solid #07c160;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(7, 193, 96, 0.08);
    letter-spacing: 1rpx;
}
  
.add-to-cart {
    position: static !important;
    border-radius: 50% !important;
    width: 64rpx !important;
    height: 64rpx !important;
    min-width: 64rpx !important;
    min-height: 64rpx !important;
    max-width: 64rpx !important;
    max-height: 64rpx !important;
    padding: 0 !important;
    margin: 0 !important;
    border: none !important;
    background: linear-gradient(135deg, #07c160 0%, #06ad56 100%) !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.35), 
                0 2rpx 4rpx rgba(7, 193, 96, 0.2);
    flex-shrink: 0 !important;
    flex-grow: 0 !important;
    overflow: visible !important;
    box-sizing: border-box !important;
    position: relative;
    z-index: 1;
    background-color: transparent !important;
}

.add-to-cart::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.3s, height 0.3s;
}

.add-to-cart:active::before {
    width: 100%;
    height: 100%;
}

.add-to-cart::after {
    border: none !important;
    border-radius: 50% !important;
}

.add-to-cart:active {
    transform: scale(0.92);
    box-shadow: 0 2rpx 6rpx rgba(7, 193, 96, 0.3), 
                0 1rpx 2rpx rgba(7, 193, 96, 0.2);
}

.plus-icon {
    width: 36rpx;
    height: 36rpx;
    object-fit: contain;
    filter: invert(100%);
    position: relative;
    z-index: 1;
    transition: transform 0.3s;
}

.add-to-cart:active .plus-icon {
    transform: rotate(90deg) scale(0.9);
}

.cart-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 110rpx;
    background: linear-gradient(180deg, #ffffff 0%, #fafafa 100%);
    border-top: 1rpx solid rgba(0, 0, 0, 0.06);
    padding: 0 30rpx;
    padding-bottom: env(safe-area-inset-bottom);
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08),
                0 -1rpx 4rpx rgba(0, 0, 0, 0.04);
    z-index: 99;
}

.cart-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #07c160;
    border: none;
    border-radius: 40rpx;
    width: 240rpx;
    height: 60rpx;
    font-size: 28rpx;
    color: white;
}

.clear-cart-btn {
    margin: 20rpx 30rpx;
    background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
    color: white;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 600;
    letter-spacing: 1rpx;
    height: 80rpx;
    line-height: 80rpx;
    border: none;
    box-shadow: 0 6rpx 20rpx rgba(255, 77, 79, 0.4),
                0 2rpx 6rpx rgba(255, 77, 79, 0.25);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.clear-cart-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.clear-cart-btn:active::before {
    left: 100%;
}

.clear-cart-btn::after {
    border: none;
}

.clear-cart-btn:active {
    transform: translateY(2rpx) scale(0.98);
    box-shadow: 0 3rpx 12rpx rgba(255, 77, 79, 0.3),
                0 1rpx 3rpx rgba(255, 77, 79, 0.2);
}

.cart-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 110rpx;
    min-height: 110rpx;
    background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
    border-top: 2rpx solid #f0f0f0;
    padding: 0 30rpx;
    padding-bottom: env(safe-area-inset-bottom, 0);
    box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
    z-index: 99;
    box-sizing: border-box;
    gap: 20rpx;
}

.cart-btn {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    background-color: transparent;
    border: none;
    gap: 20rpx;
    padding: 12rpx 20rpx;
    border-radius: 50rpx;
    min-width: auto;
    transition: all 0.3s;
    flex: 0 0 auto;
    overflow: visible;
}

.cart-btn:active {
    background-color: rgba(0, 0, 0, 0.03);
}

.cart-icon-wrapper {
    position: relative;
    width: 64rpx;
    height: 64rpx;
    min-width: 64rpx;
    min-height: 64rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
    transition: all 0.3s;
    overflow: visible;
    flex-shrink: 0;
}

.cart-btn:active .cart-icon-wrapper {
    transform: scale(0.95);
    box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.25);
}

.cart-icon {
    width: 40rpx;
    height: 40rpx;
    min-width: 40rpx;
    min-height: 40rpx;
    object-fit: contain;
    filter: brightness(0) invert(1);
    display: block;
}

.cart-badge {
    position: absolute;
    top: -6rpx;
    right: -6rpx;
    min-width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
    color: #fff;
    border-radius: 18rpx;
    font-size: 22rpx;
    font-weight: bold;
    text-align: center;
    padding: 0 10rpx;
    box-sizing: border-box;
    border: 3rpx solid #fff;
    box-shadow: 0 2rpx 8rpx rgba(255, 77, 79, 0.4);
}

.cart-price {
    font-size: 40rpx;
    color: #ff4d4f;
    font-weight: 700;
    white-space: nowrap;
    text-shadow: 0 1rpx 2rpx rgba(255, 77, 79, 0.1);
    flex-shrink: 0;
    overflow: visible;
}

.order-btn {
    background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
    color: white;
    border-radius: 50rpx;
    padding: 0 48rpx;
    height: 80rpx;
 
    min-height: 80rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    font-weight: 600;
    letter-spacing: 2rpx;
    box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.4),
                0 2rpx 6rpx rgba(7, 193, 96, 0.25);
    border: none;
    min-width: 120rpx;
    max-width: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    flex-shrink: 0;
    white-space: nowrap;
    box-sizing: border-box;
    margin-right: 20rpx;
}

.order-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
}

.order-btn:active::before {
    left: 100%;
}

.order-btn::after {
    border: none;
}

.order-btn:active {
    transform: translateY(2rpx) scale(0.98);
    box-shadow: 0 3rpx 10rpx rgba(7, 193, 96, 0.3),
                0 1rpx 3rpx rgba(7, 193, 96, 0.2);
}


.cart-modal {
    position: fixed;
    bottom: -100%;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    transition: bottom 0.3s;
    z-index: 999;
}

.cart-modal.show {
    bottom: 0;
}

.cart-modal-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-color: white;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.15);
    max-height: 80vh;
    display: flex;
    flex-direction: column;
}

.cart-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 2rpx solid #f0f0f0;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    background: linear-gradient(135deg, #f5f7fa 0%, #ffffff 100%);
}

.close-btn {
    font-size: 48rpx;
    color: #999;
    cursor: pointer;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 50%;
    transition: all 0.3s;
}

.close-btn:active {
    background: #f0f0f0;
    transform: scale(0.9);
}

.cart-modal-body {
    padding: 30rpx;
    max-height: 60vh;
    overflow-y: auto;
}

.cart-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
    font-size: 28rpx;
    color: #333;
}

.cart-item:last-child {
    border-bottom: none;
}

.cart-item-info {
    display: flex;
    flex-direction: column;
    flex: 1;
    gap: 8rpx;
}

.cart-item-name {
    font-size: 30rpx;
    font-weight: bold;
    color: #333;
}

.cart-item-spec {
    font-size: 24rpx;
    color: #999;
}

.cart-item-quantity {
    font-size: 26rpx;
    color: #666;
}

.cart-item-price {
    font-size: 32rpx;
    font-weight: bold;
    color: #ff4d4f;
}

.empty-cart-tip {
    text-align: center;
    padding: 80rpx 0;
    color: #999;
    font-size: 28rpx;
}