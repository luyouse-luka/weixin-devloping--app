.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 30rpx;
  padding-bottom: 200rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.order-block {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
  padding: 40rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.order-time {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-item {
  display: flex;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  align-items: center;
  border-left: 4rpx solid #07c160;
  transition: all 0.3s;
}

.product-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.product-image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border-radius: 12rpx;
  object-fit: cover;
  background: #f0f0f0;
}

.product-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 12rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
}

.product-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx;
}

.product-quantity {
  font-size: 26rpx;
  color: #666;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.order-footer {
  padding-top: 24rpx;
  margin-top: 30rpx;
  border-top: 2rpx solid #f0f0f0;
  text-align: right;
}

.total-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #07c160;
}

.empty-message {
  text-align: center;
  padding: 120rpx 0;
  font-size: 32rpx;
  color: #999;
  background: #fff;
  border-radius: 20rpx;
  margin: 40rpx 0;
}

.close-btn {
  position: fixed;
  bottom: 40rpx;
  left: 30rpx;
  right: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  border: none;
  z-index: 100;
}

.close-btn::after {
  border: none;
}

.close-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}
