<view class="cart-page">
  <view class="cart-header">
    <text class="page-title">购物车</text>
  </view>

  <!-- 当前购物车 -->
  <view class="cart-section">
    <view class="section-title">当前购物车</view>
    <view class="cart-list" wx:if="{{cart.length > 0}}">
      <block wx:for="{{cart}}" wx:key="id">
        <view class="cart-item">
          <view class="item-info">
            <text class="item-name">{{item.name}}</text>
            <text class="item-spec" wx:if="{{item.spec}}">规格: {{item.spec}}</text>
            <view class="item-details">
              <text class="item-quantity">数量: {{item.quantity}}</text>
              <text class="item-price">¥{{item.price * item.quantity}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
    <view class="empty-cart" wx:else>
      <text>购物车是空的</text>
    </view>
  </view>

  <!-- 已下单商品 -->
  <view class="ordered-section">
    <view class="section-title">已下单商品</view>
    <view class="ordered-list" wx:if="{{orderedProducts.length > 0}}">
      <block wx:for="{{orderedProducts}}" wx:key="id">
        <view class="ordered-item">
          <view class="item-info">
            <text class="item-name">{{item.name}}</text>
            <text class="item-spec" wx:if="{{item.spec}}">规格: {{item.spec}}</text>
            <view class="item-details">
              <text class="item-quantity">数量: {{item.quantity}}</text>
              <text class="item-price">¥{{item.price * item.quantity}}</text>
            </view>
          </view>
        </view>
      </block>
    </view>
    <view class="empty-ordered" wx:else>
      <text>暂无已下单商品</text>
    </view>
  </view>

  <!-- 底部操作栏 -->
  <view class="cart-footer" wx:if="{{cart.length > 0}}">
    <button class="go-shopping-btn" bindtap="goToProductList">去购物</button>
    <button class="checkout-btn" bindtap="goToOrder">去下单</button>
  </view>
</view>
