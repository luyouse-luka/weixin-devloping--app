.choose-chef-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f7fa 0%, #e8ecf0 100%);
  padding-bottom: 200rpx;
  position: relative;
}

/* 顶部装饰 */
.top-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 320rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 0 0 60rpx 60rpx;
  z-index: 0;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

/* 返回按钮 */
.back-container {
  position: relative;
  z-index: 1;
  padding: 20rpx 30rpx;
  padding-top: calc(40rpx + env(safe-area-inset-top, 0));
  margin-bottom: 20rpx;
}

.back-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.98) 100%);
  border-radius: 50rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1),
              0 2rpx 8rpx rgba(0, 0, 0, 0.06),
              inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  position: relative;
  overflow: hidden;
}

.back-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(102, 126, 234, 0.1), transparent);
  transition: left 0.5s;
}

.back-btn:active::before {
  left: 100%;
}

.back-btn:active {
  transform: translateY(1rpx) scale(0.97);
  background: linear-gradient(135deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0.95) 100%);
  box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.08),
              0 1rpx 4rpx rgba(0, 0, 0, 0.04);
}

.back-icon {
  font-size: 36rpx;
  color: #667eea;
  font-weight: bold;
  line-height: 1;
  transition: transform 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn:active .back-icon {
  transform: translateX(-2rpx);
}

.back-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 页面头部 */
.page-header {
  position: relative;
  z-index: 1;
  text-align: center;
  padding: 20rpx 30rpx 50rpx;
  color: #fff;
}

.title-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  display: block;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.4),
               0 1rpx 4rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 2rpx;
}

.page-subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  font-weight: 400;
  text-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 1rpx;
}

/* 订单信息卡片 */
.order-info-card {
  position: relative;
  z-index: 1;
  margin: 0 30rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: space-around;
  border-left: 4rpx solid #07c160;
}

.info-row {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.info-label {
  font-size: 24rpx;
  color: #999;
}

.info-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #ff4d4f;
}

/* 厨师区域 */
.chefs-section {
  position: relative;
  z-index: 1;
  margin: 0 30rpx 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
  border-left: 4rpx solid #667eea;
}

.chefs-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.chef-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 24rpx;
  position: relative;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.chef-card:active {
  transform: scale(0.98);
}

.chef-card.selected {
  border-color: #07c160;
  background: linear-gradient(135deg, #f0fdf4 0%, #fff 20%);
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.2);
}

.selected-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.4);
  z-index: 2;
}

.check-icon {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

/* 厨师头像 */
.chef-avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.chef-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
  border: 4rpx solid #f0f0f0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.rating-badge {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 215, 0, 0.4);
}

.rating-text {
  font-size: 20rpx;
  color: #333;
  font-weight: 700;
}

/* 厨师信息 */
.chef-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 0;
}

.chef-header {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.chef-name {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.chef-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.specialty-badge {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.2);
}

.chef-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.chef-stats {
  margin-top: auto;
}

.stat-item {
  font-size: 24rpx;
  color: #999;
  background: #f5f5f5;
  padding: 6rpx 14rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 选择按钮 */
.select-btn-wrapper {
  display: flex;
  align-items: center;
  flex-shrink: 0;
}

.select-btn {
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  background: #f0f0f0;
  color: #666;
  transition: all 0.3s;
  border: 2rpx solid transparent;
}

.select-btn.selected {
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(7, 193, 96, 0.3);
}

/* 底部容器 */
.footer-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: linear-gradient(180deg, transparent 0%, rgba(245, 247, 250, 0.95) 20%, #f5f7fa 100%);
  z-index: 100;
}

.selected-info {
  text-align: center;
  margin-bottom: 16rpx;
}

.selected-text {
  font-size: 26rpx;
  color: #07c160;
  font-weight: 600;
  background: rgba(7, 193, 96, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.confirm-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  box-shadow: 0 8rpx 24rpx rgba(7, 193, 96, 0.4),
              0 2rpx 8rpx rgba(7, 193, 96, 0.25);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.confirm-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.confirm-btn:active::before {
  left: 100%;
}

.confirm-btn::after {
  border: none;
}

.confirm-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(7, 193, 96, 0.35),
              0 1rpx 4rpx rgba(7, 193, 96, 0.2);
}

.btn-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.btn-text {
  font-size: 32rpx;
}

